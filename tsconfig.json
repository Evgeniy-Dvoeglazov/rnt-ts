{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "es5",
    "experimentalDecorators": true,
    "module": "es6",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "*.config.js", "**/*.test.ts*"]
}
