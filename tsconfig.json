{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "allowJs": true,
    "target": "es2015",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/*",
  ],
  "exclude": [
    "node_modules",
  ]
}