{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "es5",
    "experimentalDecorators": true,
    "module": "es6",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
  },
  "exclude": [
    "node_modules",
  ]
}
